<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/video_layout">
        <VideoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/video_view"
            />

        <Button
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:id="@+id/play_button"
            android:layout_centerInParent="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="#00000000"
            android:id="@+id/back"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="10">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/current_time"
                android:layout_height="wrap_content" />
            <SeekBar
                android:layout_width="0dp"
                android:layout_weight="8"
                android:id="@+id/progress"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:id="@+id/duration"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/movie_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/video_layout"
            android:background="@color/background"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/movie_detail_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/movie_title"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="8">

                <TextView
                    android:id="@+id/PG"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#424242"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:textColor="#757575"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/IMDB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:drawablePadding="10dp"
                    android:textColor="@color/text_grey"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/movie_duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:drawablePadding="10dp"
                    android:textColor="@color/text_grey"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:drawablePadding="10dp"
                    android:textColor="@color/text_grey"
                    android:textSize="12dp" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cast_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_info_layout"
            android:background="@color/background"
            android:orientation="vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/movie_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:textColor="@color/text_grey" />

            <Button
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/movie_description"
                android:background="@color/background"
                android:drawableEnd="@drawable/arrow_down"
                android:paddingEnd="8dp"
                android:text="@string/more_btn"
                android:textAllCaps="false"
                android:textColor="@color/text_grey" />

            <LinearLayout
                android:id="@+id/director"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/more"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/director"
                    android:textColor="@color/colorNormalTab"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/director_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_grey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/writer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/director"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/writer"
                    android:textColor="@color/colorNormalTab"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/writer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_grey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/writer"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/star"
                    android:textColor="@color/colorNormalTab"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/star_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_grey" />
            </LinearLayout>

        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/hsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cast_layout"
            android:background="@color/background"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <GridView
                    android:id="@+id/movie_schedule"
                    android:layout_width="500dp"
                    android:layout_height="wrap_content"
                    android:columnWidth="100dp"
                    android:horizontalSpacing="0dp"
                    android:listSelector="@drawable/back_schedule"
                    android:numColumns="7"
                    android:scrollbars="horizontal"/>
            </LinearLayout>
        </HorizontalScrollView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/all_schedule_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hsv"
            android:background="#424242"
            android:scrollbars="vertical" />


    </RelativeLayout>
</ScrollView>